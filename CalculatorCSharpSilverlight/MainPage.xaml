    <Grid x:Name="LayoutRoot" Background="White" Width="242" Height="221">
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,41,0,0" Name="Block" Text="" VerticalAlignment="Top" Width="218" IsReadOnly="True" TextAlignment="Right" />
        
        <Button Content="8" Foreground="Blue" Height="23" HorizontalAlignment="Left" Margin="68,70,0,0" Name="Eight" VerticalAlignment="Top" Width="50" Click="Eight_Click" />
