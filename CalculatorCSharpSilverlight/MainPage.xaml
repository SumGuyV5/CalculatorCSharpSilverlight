        <Button Content="/" Foreground="Red" Height="23" HorizontalAlignment="Left" Margin="180,70,0,0" Name="Divide" VerticalAlignment="Top" Width="50" Click="Divide_Click" />
        <Button Content="5" Foreground="Blue" Height="23" HorizontalAlignment="Left" Margin="68,99,0,0" Name="Five" VerticalAlignment="Top" Width="50" Click="Five_Click" />
