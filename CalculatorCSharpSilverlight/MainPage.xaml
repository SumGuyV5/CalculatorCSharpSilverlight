        <Button Content="+" Foreground="Red" Height="23" HorizontalAlignment="Left" Margin="180,157,0,0" Name="Add" VerticalAlignment="Top" Width="50" Click="Add_Click" />
        <Button Content="Clear" Foreground="Red" Height="23" HorizontalAlignment="Left" Margin="12,186,0,0" Name="Clear" VerticalAlignment="Top" Width="106" Click="Clear_Click" />
        <Button Content="=" Foreground="Red" Height="23" HorizontalAlignment="Right" Margin="0,186,12,0" Name="Equals" VerticalAlignment="Top" Width="106" Click="Equals_Click" />
        <Button Content="About" Foreground="Black" Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="About" VerticalAlignment="Top" Width="218" Click="About_Click" />
