        <Button Content="1" Foreground="Blue" Height="23" HorizontalAlignment="Left" Margin="12,128,0,0" Name="One" VerticalAlignment="Top" Width="50" Click="One_Click" />
        <Button Content="-" Foreground="Red" Height="23" HorizontalAlignment="Left" Margin="180,128,0,0" Name="Subtract" VerticalAlignment="Top" Width="50" Click="Subtract_Click" />
